# vim: noexpandtab
# Sources I've picked up these configs from over time:
# * https://blog.gitbutler.com/how-git-core-devs-configure-git/
# * https://link.springer.com/article/10.1007%2Fs10664-019-09772-z

[user]
	name = Nathan Smith
	email = nathan@nathansmith.io
	signingkey = 3B9BA490BA8CCFE7
[credential]
	helper = osxkeychain
[commit]
	; gpgsign = true
	verbose = 2
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[core]
	editor = nvim
[push]
	default = simple
	autoSetupRemote = true
[pull]
	rebase = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[difftool]
	prompt = false
[merge]
	tool = neovim
	conflictstyle = merge
[mergetool]
	keepBackup = false
[mergetool "neovim"]
	cmd = nvim "$MERGED"
	trustExitCode = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[hub]
	protocol = https
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[sendemail]
	smtpserver = smtp.fastmail.com
	smtpuser = natedub@fastmail.com
	smtpencryption = tls
	smtpserverport = 587
[init]
	defaultBranch = main
[git-town]
	sync-perennial-strategy = rebase
	sync-feature-strategy = rebase
	ship-delete-tracking-branch = false
[format]
	pretty = format:%C(auto)%h %d%Creset %s%n%Cgreen%ad%Creset %aN <%aE>%n
[log]
	date = local
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	dark = true
	features = side-by-side line-numbers decorations theme night-owlish
	syntax-theme = night-owlish
	whitespace-error-style = 22 reverse
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[rerere]
	enabled = true
	autoupdate = true
[grep]
	extendedRegexp = true
[help]
	autocorrect = prompt

[alias]
	main-branch = town main-branch
	continue = town continue
	hack = town hack
	new-pull-request = town new-pull-request
	prepend = town prepend
	prune-branches = town prune-branches
	repo = town repo
	ship = town ship
	sync = town sync
	append = town append
	discard = !git clean -df && git checkout -- .
	ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi > .gitignore"
  remote-fetch = "!rf() { git config --add remote.origin.fetch +refs/heads/$1:refs/remotes/origin/$1; git fetch origin +$1:refs/remotes/origin/$1; }; rf"
  remote-purge = "!rp() { git config --unset remote.origin.fetch \".*$1.*\"; git update-ref -d refs/remotes/origin/$1; }; rp"
	diff-parent = town diff-parent
	propose = town propose
	set-parent = town set-parent
	undo = reset --soft HEAD^
	delete = town delete
	rename = town rename
